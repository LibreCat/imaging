<!DOCTYPE html>
<html>
	<head>
		<meta http-equiv="Content-type" content="text/html; charset=[% settings.charset %]" />
		<link rel="stylesheet" href="[% request.base_uri %]/css/master.css" type="text/css" media="screen" />
		<script type="text/javascript" src="[% request.base_uri %]/js/jquery-1.7.1.min.js"></script>
		<title>Imaging</title>
	</head>
	<body>
		<div id="main">
			[% PROCESS inc/user.tt %]
			<div id="top">
				<ul id="menu">
					[% IF session.user.id %]
					<li>
						<a href="/projects">projects</a>
					</li>
                    <li>
                        <a href="/locations">scan assignments</a>
                    </li>
					<li>
                        <a href="/logs">logs</a>
                    </li>
					[% END %]
					[% IF auth.can('manage_accounts','edit') %]
					<li>
						<a href="/users">users</a>
					</li>
					[% END %]
					[% IF auth.can('directories','edit') %]
					<li>
                        <a href="/directories">directories per scanner</a>
                    </li>
					[% END %]
                    [% IF session.user.roles.grep('scanner').size > 0 %]
                    <li>
                        <a href="/ready/[% session.user.login %]">ready</a>
                    </li>
                    <li>
                        <a href="/reprocessing/[% session.user.login %]">reprocessing</a>
                    </li>
                    [% END %]
					[% IF session.user.id %]
					<li>
                        <a href="/logout">logout</a>
                    </li>
					[% END %]
				</ul>
			</div>
			[% content %]
		</div>
	</body>
</html>
