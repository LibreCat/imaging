[% PROCESS inc/errors_messages.tt %]
[% PROCESS inc/datepicker.tt %]
<script type="text/javascript">
    $(document).ready(function(){
        $("input.date").datepicker({
            dateFormat:'dd-mm-yy',
            appendText: '&nbsp;e.g. 01-01-2012',
            defaultDate:new Date(),
            minDate:new Date()
        });
    });
</script>
[% USE date %]
[% USE POSIX %]
<h1>Edit project</h1>
<form method="post" accept-charset="UTF-8">
	<table id="form-project-add" class="right">
		<tr>
            <th>naam project:</th>
            <td>
                <input type="text" name="name" id="name" value="[% project.item("name") %]" />
            </td>
        </tr>
		<tr>
            <th>naam deelproject:</th>
            <td>
                <input type="text" name="name_subproject" id="name_subproject" value="[% project.item("name_subproject") %]" />
            </td>
        </tr>
		<tr>
            <th>beschrijving:</th>
            <td>
                <textarea name="description" id="description" rows="15" cols="50">[% project.item("description") %]</textarea>
            </td>
        </tr>
		<tr>
            <th>start project (dag-maand-jaar):</th>
            <td>
                <input class="date" name="datetime_start" id="datetime_start" value="[% date.format(POSIX.floor(project.datetime_start),format => '%d-%m-%Y') %]" />
            </td>
        </tr>
		<tr>
            <th>query:</th>
            <td>
                <textarea name="query" id="query" rows="15" cols="50">[% project.item("query") %]</textarea>
            </td>
        </tr>
		<tr>
			<td colspan="2">
				<input type="submit" value="update" name="submit" id="submit" />
			</td>
		</tr>
	</table>
</form>
